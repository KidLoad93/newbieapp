<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginUserController</servlet-name>
        <servlet-class>com.newbie.web.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStudentController</servlet-name>
        <servlet-class>com.newbie.web.controllers.students.StudentAddController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.newbie.web.controllers.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserChangePassController</servlet-name>
        <servlet-class>com.newbie.web.controllers.users.UserChangePassController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.newbie.web.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentEditController</servlet-name>
        <servlet-class>com.newbie.web.controllers.students.StudentEditController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDeleteController</servlet-name>
        <servlet-class>com.newbie.web.controllers.students.StudentDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginUserController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStudentController</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserChangePassController</servlet-name>
        <url-pattern>/users/changepass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentEditController</servlet-name>
        <url-pattern>/users/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDeleteController</servlet-name>
        <url-pattern>/students/delete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
